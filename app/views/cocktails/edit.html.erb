<div class="container m-3">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Edit cocktail:</h2>
      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-primary mt-2 text-white" %>
      <% end %>

      <%= link_to 'Back', cocktails_path, class: "btn btn-primary mt-2 text-white" %>
    </div>
  </div>
</div>
