<div class="container">

  <h1><%= @cocktail.name %></h1>
  <%= link_to "Back to all cocktails", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Dose</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
    </div>
  </div>
<div class="links p-3">
        <%= link_to "Back to Recipes", cocktails_path, class: "btn btn-warning" %>

        <%= link_to "Edit Name", edit_cocktail_path(@cocktail), class: "btn btn-warning" %>

        <%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), class: "btn btn-warning" %>

        <%= link_to "Delete",
          cocktail_path(@cocktail),
          method: :delete,
          class: "btn btn-warning",
          data: { confirm: "Are you sure?" } %>
      </div>
